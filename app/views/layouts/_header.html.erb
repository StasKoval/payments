<div class="row">
<div class="twelve columns">
  <nav class="top-bar">
    <ul>
     <% unless (current_user) %>
        <li>

        </li>
     <% else %>
          <li class="found"><%= link_to  "Календарь", payments_path  %></li>
          <li>
            <%= link_to 'Создать платеж', new_payment_path, :id=>"new_payment_create", "data-reveal-id" => "new_payment" %>
          </li>
          <li>
            <%= link_to 'Добавить получателя',new_recipient_path, :id=>"new_recipient_create", "data-reveal-id" => "new_recipient" %>
          </li>
     <% end %>

   </ul>
  </nav>
</div>
</div>

<div class="alert-box">
  <%= "Вы вошли как #{current_user.email} . Дoступ \"#{current_user.role}\" "%>
  <a href="" class="close">×</a>
</div>

<div  class="reveal-modal expand"  id="new_payment" >
  <%=render :partial => "payments/form", :locals => {:payment=>Payment.new} %>
</div>
<div  class="reveal-modal expand"  id="new_recipient" >
  <%=render :partial => "recipients/form", :locals => {:recipient=>Recipient.new} %>
</div>



